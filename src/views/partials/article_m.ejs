<style>
	.card-m .category-text {
		color: gray;
		font-weight: bold;
	}
	.card-m .abstract-text,
	.card-m .title-text {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
		max-height: 3.5rem;
	}
	.card-m .title-text {
		-webkit-line-clamp: 2;
		line-clamp: 2;
		padding-bottom: 20px;
	}
	.card-m .thumbnail {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
</style>

<div class="card card-m border-0" style="width: <%= width %>">
	<img src="/img/<%= article.thumbnail %>" class="card-img-top mb-2 thumbnail" alt="<%= article.title %>" />
	<div class="card-body p-sm-1">
		<% if (typeof show_cat !== 'undefined' && show_cat) { %>
		<div class="category-text">
			<a href="/category/<%= article.category_id %>" class="text-decoration-none text-reset"> <%= article.category_name %> </a>
		</div>
		<% } %>
		<a href="/article/<%= article.article_id %>" class="text-reset title-text">
			<h5 class="card-title pt-1"><%= article.title %></h5>
		</a>
		<div class="text-muted small">
			<p class="abstract-text"><%= article.abstract %></p>
			<p><%= new Date(article.published_date).toLocaleDateString('vi-VN') %></p>
		</div>
		<% if (typeof show_tags !== 'undefined' && show_tags) { %> <% article.tags.forEach(tag => { %>
		<a href="/homepage/tag?id=<%= tag.tag_id %>" class="badge badge-info"><%= tag.tag_name %></a>
		<%}); %> <% } %>
	</div>
</div>
